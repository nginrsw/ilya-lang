  print("creating 3")
  -- this finalizer should not be called, as object will be
  -- created after 'irin_close' has been called
  setmetatable({}, {__gc = function () print(3) end})
  print(collectgarbage() or false)    -- cannot call collector here
  os.exit(0, true)
